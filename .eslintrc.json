{
    "parser": "babel-eslint",
    "extends": [],
    "plugins": ["angular", "react","ng-react-copilot", "html"],
    "rules": {
        "ng-react-copilot/ng-directive-template-naming": "error",
        "ng-react-copilot/isolate-scope": "error",
        "ng-react-copilot/replace-angular-inbuilt-directives": "error",
        "ng-react-copilot/replace-angular-scope-references-in-react-components": "error",
        "ng-react-copilot/extract-directive-and-component-information":  "error",
        "ng-react-copilot/replace-directive-with-react-component": "error",
        "ng-react-copilot/missing-required-props-in-components": "error",
        "angular/directive-restrict": ["error", {"restrict": "E", "explicit": "always"}],
        "angular/no-inline-template": "error",
        "react/prop-types": "error"
    }
}
